{
  "name": "arabic-mandi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "food",
  "sourceRoot": "apps/arabic-mandi/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser", 
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": ".firebase/dist/apps/arabic-mandi",
        "index": "apps/arabic-mandi/src/index.html",
        "main": "apps/arabic-mandi/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/arabic-mandi/tsconfig.app.json",
        "assets": [
          "apps/arabic-mandi/src/favicon.ico",
          "apps/arabic-mandi/src/assets"
        ],
        "styles": ["./node_modules/leaflet/dist/leaflet.css","node_modules/bootstrap/dist/css/bootstrap.min.css","apps/arabic-mandi/src/styles.scss"],
        "scripts": ["node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "3mb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "arabic-mandi:build:production",
          "proxyConfig": "apps/arabic-mandi/src/proxy.config.json"
        },
        "development": {
          "browserTarget": "arabic-mandi:build:development",
          "proxyConfig": "apps/arabic-mandi/src/proxy.config.json"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "arabic-mandi:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/arabic-mandi/**/*.ts",
          "apps/arabic-mandi/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/arabic-mandi/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "arabic-mandi:build"
      }
    },
    "generate-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn graphql-codegen --config apps/arabic-mandi/codegen.yml"
          }
        ]
      }
    },
    "generate-admin-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn graphql-codegen --config apps/arabic-mandi/src/app/Core/admin/admin_codegen.yml"
          }
        ]
      }
    },
    "generate-client-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn graphql-codegen --config apps/arabic-mandi/src/app/Core/client/client_codegen.yml"
          }
        ]
      }
    }
    
  }
}
